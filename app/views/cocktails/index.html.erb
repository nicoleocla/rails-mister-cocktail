<h2>Best Cocktails</h2>
  <div class="container">
    <div class="cards">
      <% @cocktails.each do |cocktail|  %>
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
          <div>
            <img src=<%= "#{array_images.sample}" %>, class="card-img" alt="...">
          </div>
          <div>
            <div class="card-body">
              <h5 class="card-title" style="color: black"><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></h5>
              <p class="card-text">Feel free to adjuts this cocktail and make it better.</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>
      <% end  %>
    </div>
  </div>


